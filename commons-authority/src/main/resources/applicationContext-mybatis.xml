<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<!-- 配置SqlSessionFactoryBean -->
	<bean id="accessDataSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<!-- 参数：数据源 -->
		<property name="dataSource" ref="accessDataSource" />
		<!-- 参数：配置实体 -->
		<property name="configLocation" value="classpath:/mybatis/SqlMapConfig.xml" />
		<!-- 参数：mapper文件集合 -->
		<property name="mapperLocations">
			<list>
				<value>classpath*:/mybatis/*Mapper.xml</value>
			</list>
		</property>
	</bean>
	
	<!-- 通过扫描指定目录下所有Mapper，所有的Mapper都继承了SqlMapper接口 -->
	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="com.meirengu.commons.authority.dao" />
		<property name="sqlSessionFactory" ref="accessDataSessionFactory" />
	</bean>
</beans>  