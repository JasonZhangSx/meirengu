<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.meirengu.cf.dao.ItemClassDao" >

    <sql id="table_name">item_class</sql>

    <!-- 分页相关开始 -->
    <select id="getByPage" resultType="Map" parameterType="Map">
        select class_id as classId, class_name as className, class_parent_id as classParentId, class_sort as classSort  FROM <include refid="table_name" />
        WHERE 1=1
        ORDER BY class_sort DESC;
    </select>

    <select id="getCount" parameterType="Map" resultType="Integer">
        select count(1) FROM <include refid="table_name" />
        WHERE 1=1
        ORDER BY class_sort DESC;
    </select>
    <!-- 分页相关结束 -->


</mapper>