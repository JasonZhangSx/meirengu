        <result column="is_buy" property="isBuy" jdbcType="TINYINT" javaType="Boolean"/>
        <result column="is_allow_inform" property="isAllowInform" jdbcType="TINYINT" javaType="Boolean"/>
        <result column="is_allow_talk" property="isAllowTalk" jdbcType="TINYINT" javaType="Boolean"/>
        <result column="state" property="state" jdbcType="TINYINT" javaType="Boolean"/>
    </resultMap>

    <sql id='table_name'>user</sql>
    <sql id="select_columns">
        user_id as userId, nickname, realname, phone,inviter_phone AS mobileInviter, idcard as idCard, password,bank_code AS bankCode, bank_idcard as bankIdCard,bank_phone as bankPhone, avatar, sex,
        birthday,email,qq,wx,area_id as areaId,register_from as registerFrom,register_time as registerTime,login_time as loginTime,last_login_time as lastLoginTime,
        login_ip as loginIp,last_login_ip as lastLoginIp,login_from as loginFrom,login_num as loginNum,wx_openid as wxOpenid,wx_info as wxInfo,qq_openid as qqOpenid,qq_info as qqInfo,sina_openid as sinaOpenid,sina_info as sinaInfo,
        is_auth as isAuth,is_buy as isBuy,is_allow_inform as isAllowInform,is_allow_talk as isAllowTalk,state
    </sql>

    <insert id="create" parameterType="User" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO
        <include refid="table_name"/>
        (user_id, nickname, realname, phone,inviter_phone, idcard, password, bank_idcard,bank_phone, avatar, sex,
        birthday,email,qq,wx,area_id,register_from,register_time,login_time,last_login_time,
        login_ip,last_login_ip,login_from,login_num,wx_openid,wx_info,qq_openid,qq_info,sina_openid,sina_info,is_auth,is_buy,is_allow_inform,is_allow_talk,state)
        VALUES
        (#{userId}, #{nickname}, #{realname}, #{phone}, #{mobileInviter}, #{idCard}, #{password}, #{bankIdCard}, #{bankPhone}, #{avatar},#{sex},
        #{birthday}, #{email}, #{qq}, #{wx}, #{areaId}, #{registerFrom}, now(), now(),#{lastLoginTime},
        #{loginIp},#{lastLoginIp},#{loginFrom},#{loginNum},#{wxOpenid},#{wxInfo},#{qqOpenid},#{qqInfo},#{sinaOpenid},#{sinaInfo},
        #{isAuth}, #{isBuy}, #{isAllowInform}, #{isAllowTalk}, #{state});
    </insert>

    <update id="update" parameterType="User">
        update <include refid="table_name"/>
        <set>
            <if test="nickname != null and nickname != ''">
            nickname=#{nickname,jdbcType=VARCHAR},
            </if>
            <if test="realname != null and realname != ''">
                realname=#{realname,jdbcType=VARCHAR},
            </if>
            <if test="phone != null and phone != ''">
                phone=#{phone,jdbcType=VARCHAR},
            </if>
            <if test="idCard != null and idCard != ''">
                idcard=#{idCard,jdbcType=VARCHAR},
            </if>
            <if test="password != null and password != ''">
                password=#{password,jdbcType=VARCHAR},
            </if>
            <if test="bankIdCard != null and bankIdCard != ''">
                bank_idcard=#{bankIdCard,jdbcType=VARCHAR},
            </if>
            <if test="bankPhone != null and bankPhone != ''">
                bank_phone=#{bankPhone,jdbcType=VARCHAR},
            </if>
            <if test="avatar != null and avatar != ''">
                avatar=#{avatar,jdbcType=VARCHAR},
            </if>
            <if test="sex != null">
                sex=#{sex,jdbcType=TINYINT},
            </if>
            <if test="birthday != null">
                birthday=#{birthday,jdbcType=DATE},
            </if>
            <if test="email != null and email != ''">
                email=#{email,jdbcType=VARCHAR},
            </if>
            <if test="qq != null and qq != ''">
                qq=#{qq,jdbcType=VARCHAR},
            </if>
            <if test="wx != null and wx != ''">
                wx=#{wx,jdbcType=VARCHAR},
            </if>
            <if test="areaId != null">
                area_id=#{areaId,jdbcType=INTEGER},
            </if>
            <if test="registerFrom != null">
                register_from=#{registerFrom,jdbcType=INTEGER},
            </if>
            <if test="registerTime != null">
                register_time=#{registerTime,jdbcType=DATE},
            </if>
            <if test="loginTime != null">
                login_time=#{loginTime,jdbcType=DATE},
            </if>
            <if test="lastLoginTime != null">
                last_login_time=#{lastLoginTime,jdbcType=DATE},
            </if>
            <if test="loginIp != null and loginIp !=''">
                login_ip=#{loginIp,jdbcType=VARCHAR},
            </if>
            <if test="lastLoginIp != null and lastLoginIp != ''">
                last_login_ip=#{lastLoginIp,jdbcType=VARCHAR},
            </if>
            <if test="loginFrom != null">
                login_from=#{loginFrom,jdbcType=VARCHAR},
            </if>
            <if test="loginNum != null">
                login_num=#{loginNum,jdbcType=VARCHAR},
            </if>
            <if test="wxOpenid != null and wxOpenid != ''">
                wx_openid=#{wxOpenid,jdbcType=VARCHAR},
            </if>
            <if test="wxInfo != null and wxInfo != ''">
                wx_info=#{wxInfo,jdbcType=VARCHAR},
            </if>
            <if test="qqOpenid != null and qqOpenid != ''">
                qq_openid=#{qqOpenid,jdbcType=VARCHAR},
            </if>
            <if test="qqInfo != null and qqInfo != ''">
                qq_info=#{qqInfo,jdbcType=VARCHAR},
            </if>
            <if test="sinaOpenid != null and sinaOpenid != ''">
                sina_openid=#{sinaOpenid,jdbcType=VARCHAR},
            </if>
            <if test="sinaInfo != null and sinaInfo != ''">
                sina_info=#{sinaInfo,jdbcType=VARCHAR},
            </if>
            <if test="isAuth != null and isAuth != ''">
                is_auth=#{isAuth,jdbcType=INTEGER},
            </if>
            user_id=#{userId}
        </set>
        <where>
            user_id=#{userId} and state=1
        </where>
    </update>
    <update id="updatePasswordByPhone" parameterType="User">
        update <include refid="table_name"/>
        <set>
            password=#{password,jdbcType=VARCHAR},
        </set>
        <where>
            phone=#{phone} and state=1
        </where>
    </update>
    <update id="updateState" parameterType="User">
        update <include refid="table_name"/>
        <set>
            <if test="isAuth != null">
                is_auth=#{isAuth,jdbcType=TINYINT},
            </if>
            <if test="isBuy != isBuy">
                is_buy=#{isBuy,jdbcType=TINYINT},
            </if>
            <if test="isAllowInform != null">
                is_allow_inform=#{isAllowInform,jdbcType=TINYINT},
            </if>
            <if test="isAllowTalk != null">
                is_allow_talk=#{isAllowTalk,jdbcType=TINYINT},
            </if>
            <if test="state != state">
                state=#{state,jdbcType=TINYINT},
            </if>
        </set>
        <where>
            user_id=#{userId} and state=1
        </where>
    </update>

    <select id="retrieveByUserId" parameterType="INTEGER" resultType="User">
        SELECT <include refid="select_columns" />
        FROM <include refid="table_name"/>
        WHERE user_id=#{userId}
    </select>

    <select id="retrieveByPhone" parameterType="String" resultType="User">
        SELECT <include refid="select_columns" />
        FROM <include refid="table_name"/>
        WHERE phone=#{phone}
    </select>
    <select id="selectByInviterPhone" parameterType="String" resultType="User">
        SELECT <include refid="select_columns" />
        FROM <include refid="table_name"/>
        WHERE inviter_phone=#{mobileInviter}
    </select>
    <select id="listUserAvatar" parameterType="List" resultType="User">
        SELECT user_id as userId,avatar
        FROM <include refid="table_name"/>
        WHERE state = 1 AND user_id IN
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <select id="verifyByPasswordAndPhone" parameterType="java.util.Map" resultType="User">
        SELECT <include refid="select_columns" />
        FROM <include refid="table_name"/>
        WHERE phone=#{phone} AND password = #{password}
    </select>


</mapper>