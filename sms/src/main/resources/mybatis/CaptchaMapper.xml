<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.meirengu.sms.dao.CaptchaDao">

    <resultMap id="Captcha" type="Captcha">
        <id column="id" property="id" jdbcType="INTEGER" javaType="int"/>
        <result column="mobile" property="mobile" jdbcType="VARCHAR" javaType="string"/>
        <result column="code" property="code" jdbcType="INTEGER" javaType="int"/>
        <result column="uid" property="type" jdbcType="VARCHAR" javaType="string"/>
        <result column="ip" property="ip" jdbcType="VARCHAR" javaType="string"/>
        <result column="create_time" property="createTime" jdbcType="DATE" javaType="Date"/>
        <result column="expire_time" property="expireTime" jdbcType="DATE" javaType="Date"/>
        <result column="is_use" property="isUse" jdbcType="BIT" javaType="Boolean"/>
        <result column="using_time" property="usingTime" jdbcType="DATE" javaType="Date"/>
    </resultMap>

    <sql id='table_name'>captcha</sql>
    <sql id="select_columns">
        id, mobile, code, uid,ip, create_time as createTime, expire_time as expireTime, is_use as isUse, using_time as usingTime
    </sql>

    <insert id="create" parameterType="Captcha" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
        <include refid="table_name"/>
        (id, mobile,code,uid,ip,create_time,expire_time,is_use,using_time)
        VALUES
        (#{id}, #{mobile}, #{code}, #{uid}, #{ip}, #{createTime}, #{expireTime}, #{isUse}, #{usingTime});
    </insert>

    <update id="update" parameterType="Captcha">
        update <include refid="table_name"/>
        <set>
            <if test="isUse != null and isUse != ''">
                is_use=#{isUse},
            </if>
            <if test="usingTime != null">
                using_time=#{usingTime}
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>

    <select id="retrieve" parameterType="Map" resultType="Captcha">
        SELECT <include refid="select_columns" />
        FROM <include refid="table_name"/>
        <where>
            is_use=0
            <if test="mobile!=null and mobile != ''">
                AND mobile=#{mobile}
            </if>
            <if test="code!=null">
                AND code=#{code}
            </if>
            <if test="uid!=null and uid != ''">
                AND uid=#{uid}
            </if>
        </where>
    </select>

</mapper>